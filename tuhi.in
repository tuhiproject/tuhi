import os
import subprocess

tuhi_server = os.path.join('@libexecdir@', 'tuhi-server')
tuhi_gui = os.path.join('@libexecdir@', 'tuhi-gui')


@devel@  # NOQA

if __name__ == '__main__':
    tuhi = subprocess.Popen(tuhi_server)
    try:
        subprocess.run(tuhi_gui)
    except KeyboardInterrupt:
        pass
    tuhi.terminate()
